# Reservoir API key (required)
# Get one at https://reservoir.tools/
RESERVOIR_API_KEY=your_reservoir_api_key_here

# Ethereum wallet private key (required for purchasing NFTs)
# WARNING: Never share your private key or commit it to version control
PRIVATE_KEY=your_ethereum_private_key_here

# Ethereum RPC URL (required)
# Examples:
# - Alchemy: https://eth-mainnet.g.alchemy.com/v2/your-api-key
# - Infura: https://mainnet.infura.io/v3/your-api-key
RPC_URL=your_ethereum_rpc_url_here

# Etherscan API key (optional, used for gas price optimization)
# Get one at https://etherscan.io/apis
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Configuration options
# Maximum ETH to spend per NFT
MAX_PRICE_PER_ITEM=2
# Maximum total ETH to spend in auto-sweep mode
MAX_TOTAL_SPEND=5
# Minimum discount percentage to consider (e.g., 10 for 10%)
MIN_DISCOUNT_PERCENT=10
# Maximum gas price in gwei
MAX_GAS_PRICE=30
# Collections to monitor (comma-separated contract addresses)
COLLECTIONS_TO_MONITOR=0xbc4ca0eda7647a8ab7c2061c2e118a18a936f13d,0x60e4d786628fea6478f785a6d7e704777c86a7c6 